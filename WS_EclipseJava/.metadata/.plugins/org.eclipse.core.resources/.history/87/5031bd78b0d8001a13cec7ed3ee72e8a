package converteIdadeEx1;

import java.util.Scanner;

public class converteIdade {
	
	
	
	public static void main(String args[]) {
		
		/*
		 * 1. Faça um sistema que leia a idade de uma pessoa expressa 
		 * em anos, meses e dias e mostre-a expressa apenas em dias. 
		 */
		
		Scanner sc = new Scanner(System.in);
		
		int idade, dias, meses, anos;	
		
		System.out.printf("Digite a idade em anos:  ");
		idade = sc.nextInt();
		System.out.println("Digite o mes atual: ");
		meses = sc.nextInt();
		System.out.println("Digite o dia atual: ");
		dias = sc.nextInt();
		
		anos = (idade * 365) + (meses * 30) + dias;
		
		System.out.println("Seu tempo de vida é: " + anos);
		
		sc.close();
	}

}
